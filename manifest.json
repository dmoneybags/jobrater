{
    "name": "Job Rater Alpha",
    "version": "0.1.0",
    "description": "Get the real information on job postings BEFORE you apply.",
    "permissions": [
    "storage",
    "tabs",
    "activeTab",
    "scripting",
    "webRequest",
    "webRequestBlocking",
    "<all_urls>"
    ],
    "host_permissions" : [
    "http://*/*",
    "https://*/*"
    ],
    "background": {
        "service_worker": "src/background/background.js",
        "type": "module"
    },
    "content_scripts": [
        {
            "matches": ["https://*.linkedin.com/*"],
            "js": [
                "src/content/contentScript.js",
                "src/content/glassdoorScraperCalls.js",
                "src/content/databaseCalls.js",
                "src/content/userValidation.js",
                "src/content/auth.js",
                "src/content/tests/testLogin.jsx"
            ]
        }
    ],
    "action": {
        "default_title": "Job Rater",
        "default_popup": "dist/popup.html"
    },
    "manifest_version": 3
}